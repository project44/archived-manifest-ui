{
  "name": "manifest-ui",
  "private": true,
  "author": "project44",
  "license": "MIT",
  "scripts": {
    "pkg": "manypkg run",
    "build": "preconstruct build",
    "clean:emotion-types": "rimraf node_modules/@emotion/core/types",
    "postinstall": "yarn clean:emotion-types",
    "site": "manypkg run site dev",
    "site:build": "manypkg run site build",
    "playroom": "playroom start",
    "playroom:build": "playroom build",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "format": "prettier --write .",
    "lint": "manypkg check && prettier --check . && tsc",
    "release": "yarn build && changeset publish",
    "version": "changeset version && yarn"
  },
  "workspaces": [
    "examples/*",
    "packages/*",
    "site"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "volta": {
    "node": "14.17.6",
    "yarn": "1.22.15"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "dependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.4",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@types/lodash": "^4.14.173",
    "@types/node": "^16.9.2",
    "@types/react": "17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/webpack-env": "^1.16.2",
    "babel-loader": "^8.2.3",
    "chromatic": "^6.0.4",
    "framer-motion": "^4.1.17",
    "lodash": "^4.17.21",
    "playroom": "^0.27.7",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.4.3"
  }
}
