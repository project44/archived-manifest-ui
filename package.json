{
  "name": "manifest-ui",
  "private": true,
  "author": "project44",
  "license": "MIT",
  "scripts": {
    "pkg": "manypkg run",
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "start": "manypkg run site start",
    "site:dev": "manypkg run site dev",
    "site:build": "manypkg run site build",
    "analyze": "manypkg run site analyze",
    "playroom:start": "playroom start",
    "playroom:build": "playroom build",
    "format": "prettier --write .",
    "lint": "manypkg check && prettier --check . && tsc",
    "release": "yarn build && changeset publish",
    "size": "yarn build && size-limit",
    "test": "yarn test:jest",
    "test:jest": "echo 'No tests yet!'",
    "version": "changeset version && yarn",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "workspaces": [
    "examples/*",
    "packages/*",
    "site"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "volta": {
    "node": "14.17.6",
    "yarn": "1.22.15"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "size-limit": [
    {
      "path": "packages/react/dist/manifest-ui-react.cjs.js"
    },
    {
      "path": "packages/react/dist/manifest-ui-react.esm.js"
    }
  ],
  "dependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.4",
    "@size-limit/preset-small-lib": "^6.0.2",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.173",
    "@types/node": "^16.9.2",
    "@types/react": "17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/webpack-env": "^1.16.2",
    "babel-loader": "^8.2.3",
    "jest": "^27.2.0",
    "lodash": "^4.17.21",
    "playroom": "^0.27.4",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^6.0.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.1.0",
    "typescript": "^4.4.3"
  }
}
