{
  "name": "manifest-root",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn run clean:build && yarn run clean:types && yarn run clean:tokens",
    "clean:build": "packemon clean",
    "clean:tokens": "rimraf 'packages/design-tokens/src'",
    "clean:types": "rimraf 'packages/**/*/{dts,*.tsbuildinfo}'",
    "build": "yarn run build:tokens && yarn run build:packages && yarn run build:types",
    "build:packages": "packemon build --addEngines",
    "build:tokens": "node scripts/generate-tokens.mjs",
    "build:types": "beemo typescript --build",
    "format": "beemo prettier",
    "lint": "beemo eslint",
    "pack": "NODE_ENV=production packemon pack --addEngines --declaration",
    "postinstall": "beemo create-config",
    "test": "beemo jest",
    "test:coverage": "yarn run test --coverage"
  },
  "devDependencies": {
    "@beemo/cli": "^2.0.6",
    "@beemo/core": "^2.1.4",
    "@manifest-ui/vessel": "^0.2.0",
    "@types/prettier": "^2.6.1",
    "@types/react": "^18.0.9",
    "eslint": "^8.15.0",
    "jest": "^28.1.0",
    "lodash": "^4.17.21",
    "packemon": "^2.2.2",
    "prettier": "^2.6.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^3.0.2",
    "style-dictionary": "^3.7.0",
    "typescript": "^4.6.4"
  },
  "packageManager": "yarn@3.2.0"
}
